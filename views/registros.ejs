<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Registros</title>
    <link rel="stylesheet" href="css/styles.css" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
  </head>
  <body>
    <%- include('navbar.ejs') %>
    <div class="tabela">
      <h1 style="color: rgb(223, 219, 214)">Registros</h1>
      <table class="table" style="border-radius: 10px">
        <tr>
          <th>Código</th>
          <th>Nome</th>
          <th>Carga horária</th>
          <th>Professor</th>
          <th></th>
          <th></th>
        </tr>
        <% data.forEach(element => {%>
        <tr>
          <td><%= element.codigod%></td>
          <td><%= element.nomed%></td>
          <td><%= element.cargad%></td>
          <td><%= element.professor%></td>
          <td>
            <form action="/editar" method="post">
              <input
                type="text"
                name="codigod"
                value="<%= element.codigod %>"
                hidden
                id=""
              />
              <input
                type="text"
                name="nomed"
                value="<%= element.nomed %>"
                hidden
                id=""
              />
              <input
                type="text"
                name="cargad"
                value="<%= element.cargad %>"
                hidden
                id=""
              />
              <input
                type="text"
                name="professord"
                value="<%= element.professor %>"
                hidden
                id=""
              />
              <button type="submit" class="btn btn-secondary">Editar</button>
            </form>
          </td>
          <td>
            <form action="/delete" method="post">
              <input
                type="text"
                name="codigod"
                value="<%= element.codigod %>"
                hidden
                id=""
              /><button
                type="submit"
                onclick="clicked(event)"
                class="btn btn-secondary"
              >
                Excluir
              </button>
            </form>
          </td>
        </tr>
        <%}); %>
      </table>
    </div>
    <script>
      function clicked(e) {
        if (
          !confirm("Isso fará a exclusão do registro. Você está certo disso?")
        ) {
          e.preventDefault();
        }
      }
    </script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"
    ></script>
    <%- include('footer.ejs') %>
  </body>
</html>
